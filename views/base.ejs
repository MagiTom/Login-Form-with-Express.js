<%- include('header') -%>


    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login System</h2>
                <span>Log in for the existing user</span>
                <% if(locals.logout){ %>
                    <div class="alter alert-success text-center mt-3">
                        <%= logout %>
                    </div>
                    <% } %>
            </div>
            <form action="/route/login" method="POST" class="pt-1">
                <div class="form-group">
                    <input type="email" placeholder="email" name="email">
                </div>
                <div class="form-group">
                    <input type="password" class="mt-3" name="password" placeholder="password">
                </div>
                <button type="submit" class="btn btn-success rounded-pill mt-3">Submit</button>
            </form>
        </div>
    </div>


    <%- include('footer') -%>